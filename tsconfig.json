{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": ["ES2019", "es2019.array"]
  },
  "include": ["./src", "./test", "hardhat"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "artifacts",
    "cache"
  ],
  "files": ["./hardhat.config.ts"]
}
